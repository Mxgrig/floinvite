# ═══════════════════════════════════════════════════
# Email Marketing - SMTP Configuration
# ═══════════════════════════════════════════════════
# Hostinger SMTP for sending marketing emails

SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=admin@floinvite.com
SMTP_PASS=your-hostinger-email-password

EMAIL_FROM_ADDRESS=admin@floinvite.com
EMAIL_FROM_NAME=Floinvite

# ═══════════════════════════════════════════════════
# Email Marketing - Application URLs
# ═══════════════════════════════════════════════════

BASE_URL=https://floinvite.com/floinvite-mail
PUBLIC_URL=https://floinvite.com

# ═══════════════════════════════════════════════════
# Email Marketing - Rate Limiting & Batching
# ═══════════════════════════════════════════════════
# Rate limiting (emails per hour)
RATE_LIMIT_PER_HOUR=100

# Batch processing
BATCH_SIZE=50

# ═══════════════════════════════════════════════════
# Email Marketing - Session & Security
# ═══════════════════════════════════════════════════
SESSION_TIMEOUT=3600

# Optional: Admin IP whitelist (comma-separated)
# ADMIN_IP_WHITELIST=192.168.1.1,203.0.113.0

# ═══════════════════════════════════════════════════
# Development Settings
# ═══════════════════════════════════════════════════

VITE_DEBUG=false
VITE_DEBUG_MODE=false
VITE_STRIPE_TEST_MODE=true
DEBUG=false
